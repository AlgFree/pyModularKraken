<html>
    <head>
        <x>0</x>
        <y>0</y>
        <width>1024</width>
        <height>600</height>
        <title>hwdisplay</title>
        <controller>hexa</controller>
        <target>ifd</target>
        <bg>#000000</bg>
        <fg>#ffffff</fg>
        <font>("Arial", 25)</font>
        <fullscreen/>
        <topmost/>
    </head>
    <body>
        <pagecontroller default="info" x="0" y="0" width="100" height="600">
            <page name="info">Info</page>
            <page name="audio">Audio</page>
            <page name="desktop">Desktop</page>
            <page name="hid">HID</page>
            <page name="obs">OBS</page>
        </pagecontroller>
        
        <variable page="info" name="requestalldata" function="requestalldata" every="0.5"/>
        <variable page="info" name="cpuPercent" function="cpuPercent" every="0.5"/>
        <variable page="info" name="cpuAll" function="cpuAll" every="0.5"/>
        <variable page="info" name="cpuPercentGraph" function="cpuPercentGraph" every="0.5"/>
        <image page="info" x="150" y="60" image="assets/hexa.png"/>
        <label page="info" x="200" y="20" font="Arial 20 bold" text="CPU"/>
        <label page="info" x="200" y="70" font="Arial 15" variable="cpuPercent"/>
        <label page="info" x="170" y="115" font="Arial 7" variable="cpuAll"/>
        <label page="info" x="190" y="130" font="mono 5" variable="cpuPercentGraph"/>
        
        <variable page="info" name="gpuPercent" function="gpuPercent" every="0.5"/>
        <variable page="info" name="gpuMemused" function="gpuMemused" every="0.5"/>
        <variable page="info" name="gpuPercentGraph" function="gpuPercentGraph" every="0.5"/>
        <image page="info" x="350" y="60" image="assets/hexa.png"/>
        <label page="info" x="400" y="20" font="Arial 20 bold" text="GPU"/>
        <label page="info" x="400" y="70" font="Arial 15" variable="gpuPercent"/>
        <label page="info" x="365" y="115" font="Arial 8" variable="gpuMemused"/>
        <label page="info" x="390" y="130" font="mono 5" variable="gpuPercentGraph"/>

        <variable page="info" name="ramPercent" function="ramPercent" every="0.5"/>
        <variable page="info" name="ramPercentGraph" function="ramPercentGraph" every="0.5"/>
        <image page="info" x="550" y="60" image="assets/hexa.png"/>
        <label page="info" x="595" y="20" font="Arial 15" text="RAM"/>
        <label page="info" x="600" y="80" variable="ramPercent"/>
        <label page="info" x="590" y="130" font="mono 5" variable="ramPercentGraph"/>

        <image page="info" x="750" y="60" image="assets/hexa.png" onclick="hexa.nicswitch"/>
        <label page="info" x="800" y="20" font="Arial 20 bold" text="NIC"/>
        <variable page="info" name="nic" function="nic" every="0.5"/>
        <label page="info" x="750" y="80" variable="nic"/>

        <image page="info" x="250" y="260" image="assets/hexa.png"/>
        <label page="info" x="295" y="220" font="Arial 20 bold" text="tCPU"/>
        <variable page="info" name="tcpu" function="tcpu" every="0.5"/>
        <label page="info" x="250" y="280" variable="tcpu"/>
        
        <variable page="info" name="gpuTemp" function="gpuTemp" every="0.5"/>
        <image page="info" x="450" y="260" image="assets/hexa.png"/>
        <label page="info" x="495" y="220" font="Arial 20 bold" text="tGPU"/>
        <variable page="info" name="tgpu" function="tgpu" every="0.5"/>
        <label page="info" x="450" y="280" variable="tgpu"/>
        <label page="info" x="505" y="295" font="Arial 10" variable="gpuTemp"/>

        <image page="info" x="650" y="260" image="assets/hexa.png"/>
        <label page="info" x="695" y="220" font="Arial 20 bold" text="tSYS"/>
        <variable page="info" name="tsys" function="tsys" every="0.5"/>
        <label page="info" x="650" y="280" variable="tsys"/>

        <label page="audio" font="Arial 25" color="#ff0000" bg="#00ff00" text="Nothing to see here in the audio page" x="250" y="50"/>
        <label page="desktop" font="Arial 20" text="Nothing to see here in the desktop page" x="250" y="50"/>
        <label page="hid" font="Arial 15" text="Nothing to see here in the HID page" x="250" y="50"/>
        <label page="obs" font="Arial 10" text="Nothing to see here in the OBS page" x="250" y="50"/>

    </body>

</html>
